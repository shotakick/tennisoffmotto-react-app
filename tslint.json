{
  "rulesDirectory": ["tslint-plugin-prettier"],
  "extends": [
    // "tslint:recommended",
    "tslint-config-airbnb",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "prettier": [
      true,
      {"singleQuote": true}
    ],
    "ordered-imports": true,
    "object-shorthand-properties-first":false,
    "no-boolean-literal-compare": false
  }
}
